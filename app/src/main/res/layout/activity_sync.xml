<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mmednet.common.multithread.sync.SyncActivity">

    <Button
        android:id="@+id/bt_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_latch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countdownlatach"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_semaphore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/semaphore"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cyclicbarrier"
        android:textAllCaps="false"/>

</LinearLayout>
